<aura:component controller="CampingListController">
    <ltng:require styles="{!$Resource.LightningDesignWinter17+'/assets/styles/salesforce-lightning-design-system-vf.min.css'}" />
	 
    <aura:handler name="addItem" event="c:addItemEvent" action="{!c.handleAddItem}"/>
    <aura:handler name="init" action="{!c.doInit}" value="{!this}"/>	
    <aura:attribute name="items" type="Camping_Item__c[]"/>
    <aura:attribute name="newItem" type="Camping_Item__c"
                    default="{ 'sobjectType': 'Camping_Item__c',
                    'Name': '',
                    'Vlabs__Price__c': 0,
                    'Vlabs__Quantity__c': 0,
                    'Vlabs__Packed__c': false }"/>

    <div class="LightningDesignWinter17">
        <div aria-labelledby="newCampingform">
            <fieldset class="slds-box slds-theme--default slds-container--small">
                <legend id="newcampingform" class="slds-text-heading--label slds-p-vertical--medium">
                    Add New Camping
                </legend>
                
                <c:campingListForm />
            </fieldset>
        
        </div>
        
        <div class="slds-card slds-p-top--small">
            <header class="slds-card__header">
                <h3 class="slds-text-heading--small"></h3>
            </header>
            
            <section class="slds-card__body">
                <div id="list" class="row">
                    <aura:iteration items="{!v.items}" var="item">
                        <c:campingListItem item="{!item}"/>
                    </aura:iteration>
                </div>
            </section>
        </div>
    </div>
</aura:component>